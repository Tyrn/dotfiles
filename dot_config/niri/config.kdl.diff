//
// Settings for a laptop 1920x1080
//

output "eDP-1" {
    mode "1920x1080@60.000"
    position x=1920 y=0
    scale 1.25
    variable-refresh-rate
}

// Below are the [universally] required
// changes to the standard niri/config.kdl

input {
    keyboard {
        xkb {
        }
        //numlock
    }
    touchpad {
        tap
    }
    mouse {
    }
    trackpoint {
    }
}

// ...

spawn-at-startup "ibus" "start" "--type" "wayland"

// ...
// Ctrl+Space is the only difference
// (Mod+Space reserved for IBus)

    Ctrl+Space hotkey-overlay-title="Application Launcher" {
        spawn "dms" "ipc" "call" "spotlight" "toggle";
    }
